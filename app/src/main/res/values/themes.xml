<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MailProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#8F2EFD</item>
        <!-- Customize your theme here. -->
    </style>

    <color name="appBarTitleColor">#000000</color>
    <color name="settingTextColor">#000000</color>
    <color name="mailSenderTextColor">#000000</color>
    <color name="mailTitleTextColor">#424242</color>
    <color name="mailContentTextColor">#7A7A7A</color>

    <color name="mainBottomNavigationviewSelected">#015EFF</color>
    <color name="mainBottomNavigationviewUnselected">#747474</color>

    <style name="cardViewRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>